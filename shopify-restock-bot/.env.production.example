# Copy this to .env and fill in your real values
# NEVER commit the real .env file to GitHub!

# Application
PORT=3000
NODE_ENV=production

# Database (for production - use MongoDB Atlas or similar)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shopify-restock-bot

# Shopify App Credentials (get from Shopify Partners dashboard)
SHOPIFY_API_KEY=your_shopify_app_key_here
SHOPIFY_API_SECRET=your_shopify_app_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Security (generate strong random values)
JWT_SECRET=generate_strong_random_secret_here
ENCRYPTION_KEY=generate_32_character_encryption_key

# Email/Notifications (optional)
EMAIL_API_KEY=your_email_provider_api_key
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Application Info
APP_NAME=Shopify Smart Restock Bot
APP_VERSION=1.0.0
COMPANY_NAME=Your Company Name